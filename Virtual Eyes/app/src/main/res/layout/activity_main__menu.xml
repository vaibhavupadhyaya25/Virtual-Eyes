<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context="io.github.vaibhav.virtualeyes.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:id="@+id/relativeLayout2">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear1"
        android:orientation="vertical"
        android:background="@color/logo"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@+id/relativeLayout2"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_marginTop="10dp"
            android:background="@drawable/home"
            android:id="@+id/textView"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Home "
            android:textColor="#4ed8cc"
            android:textSize="22dp" />



    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linear1"
        android:layout_marginTop="-80dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:clipToPadding="false"
        android:elevation="16dp">
        <Button
            android:elevation="32dp"
            android:id="@+id/microphoneButton"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/rect"
            android:drawableTop="@drawable/mic"
            android:padding="10dp"
            android:text="Speech"
            android:textColor="#3a3c3c"
            android:textSize="18dp" />
        <Button
            android:id="@+id/cameraButton"
            android:layout_width="140dp"
            android:layout_height="140dp"

            android:layout_toRightOf="@+id/microphoneButton"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/rect"
            android:drawableTop="@drawable/camera"
            android:padding="10dp"
            android:text="Read Image"
            android:textColor="#3a3c3c"
            android:textSize="18dp" />

        <Button
            android:id="@+id/quickButton"
            android:layout_width="350dp"
            android:layout_height="160dp"
            android:layout_below="@+id/microphoneButton"
            android:layout_marginTop="30dp"
            android:background="@drawable/rect"
            android:drawableStart="@drawable/link"
            android:paddingLeft="25dp"
            android:paddingRight="30dp"
            android:text="Quicklinks"
            android:textColor="#3a3c3c"
            android:textSize="20dp" />


    </RelativeLayout>






</RelativeLayout>
